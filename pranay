	File[] files = dir.listFiles(new FilenameFilter() {
		
	    public boolean accept(File dir, String name) {
	    	System.out.println(name);
	        return name.endsWith(".msg");
	    }
	});
	System.out.println(con);
	if(files[0].exists())
	return files[0].toString();
	else return "no";
	}

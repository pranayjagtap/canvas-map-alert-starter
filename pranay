  static void AppendToExcel(String country,Date d) throws Exception
  {
     InputStream inp = new FileInputStream("C:/Users/admin/Desktop/workbook.xlsx");

      Workbook wb = WorkbookFactory.create(inp);
      Sheet sheet =wb.getSheetAt(0);
      SimpleDateFormat format1 = new SimpleDateFormat("dd-MM-yy");
      SimpleDateFormat format = new SimpleDateFormat("dd-MMM-yy hh:mm:ss a");
     String startDate=format1.format(d);
     // format = new SimpleDateFormat("HH:mm:ss");
      String dateString = format.format(d);
     // Row row = sheet.createRow((short) 2);
    //  String date = d.toString();
      System.out.println(sheet.getLastRowNum());
    //  sheet.shiftRows(sheet.getLastRowNum()+2, sheet.getLastRowNum()+2, 1, true, true);
      Row row1 = sheet.createRow(sheet.getLastRowNum()+1);
      row1.createCell(0).setCellValue(country);
      row1.createCell(1).setCellValue(startDate);
      row1.createCell(2).setCellValue(dateString);
      row1.createCell(3).setCellValue(true);

      // Write the output to a file
      FileOutputStream fileOut = new FileOutputStream("C:/Users/admin/Desktop/workbook.xlsx");
      wb.write(fileOut);
      fileOut.close();
  }
